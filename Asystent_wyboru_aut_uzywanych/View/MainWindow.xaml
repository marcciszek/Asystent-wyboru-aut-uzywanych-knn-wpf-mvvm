<Window x:Class="Asystent_wyboru_aut_uzywanych.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asystent_wyboru_aut_uzywanych"
        xmlns:vm ="clr-namespace:Asystent_wyboru_aut_uzywanych.ViewModel"
        xmlns:view="clr-namespace:Asystent_wyboru_aut_uzywanych.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <vm:MainViewModel x:Key="mainVM"/>
    </Window.Resources>
    <Grid DataContext="{DynamicResource mainVM}">
        <TabControl>
            <TabItem x:Name="test_wyswietlanie" Header="Testowe wyswietlanie">
                <Grid>
                    <ListView x:Name="Cars"
                                ItemsSource="{Binding listVM.Cars}">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Width="150" x:Name="column_ID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ID}" FontSize="14"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="ID" Width="{Binding ActualWidth, ElementName=column_ID}">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseDown">
                                                        <i:InvokeCommandAction Command="{Binding listVM.Load_Cars}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBlock>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    
                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding brand}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Marka" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding model}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Model" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding vehicle_type}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Typ nadwozia" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding fuel_type}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Typ paliwa" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Age}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Rok produkcji" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Price}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Cena" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Power}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Moc silnika" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Mileage}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Przebieg" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding gearbox_type}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Typ skrzyni biegów" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    
                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding damage}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.Header>
                                            <TextBlock Text="Uszkodzony" Width="{Binding ActualWidth, ElementName=column_ID}"/>
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="testowy" Header="Test">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Cena"  FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="price" Text="{Binding carsVM.Price}" PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Moc silnika:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="power" Text="{Binding carsVM.Power}" PreviewTextInput="NumberValidationTextBox"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Przebieg:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="mileage" Text="{Binding carsVM.Mileage}" PreviewTextInput="NumberValidationTextBox"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Wiek auta:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="age" Text="{Binding carsVM.Age}" PreviewTextInput="NumberValidationTextBox"/>
                        </DockPanel>

                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Marka:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <ComboBox VerticalAlignment="Center"
                          x:Name="brands_combo_box"
                          FontSize="12"
                          HorizontalAlignment="Stretch"
                          ItemsSource="{Binding Path=carsVM.Brands}"
                          SelectedItem="{Binding Path=carsVM.Selected_Brand, Mode=TwoWay}"
                />
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Marka:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <ComboBox VerticalAlignment="Center"
                          x:Name="models_combo_box"
                          FontSize="12"
                          HorizontalAlignment="Stretch"
                          ItemsSource="{Binding Path=carsVM.Models}"
                />
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Typ nadwozia:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="vehicle_type" Text="{Binding carsVM.Vehicle_type}"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Typ skrzyni biegów:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="gearbox_type" Text="{Binding carsVM.Gearbox_type}"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Typ paliwa:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="fuel_type" Text="{Binding carsVM.Fuel_type}"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Marka:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="brand" Text="{Binding carsVM.Brand}"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Model:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="model" Text="{Binding carsVM.Model}"/>
                        </DockPanel>
                        <DockPanel Margin="10" LastChildFill="True">
                            <TextBlock Text="Uszkodzony:" FontSize="15" VerticalAlignment="Center" Margin="10" MinWidth="125px"/>
                            <TextBox x:Name="damage" Text="{Binding carsVM.Damage}"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Button Content="Dodaj auto do bazy"
                    Margin="10, 100"
                    FontSize="15"
                    Command="{Binding carsVM.Add_car}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="Add_car_control" Header="Dodaj Auto">
                <view:AddCarViewControl x:Name="Add_control"
                                        Price="{Binding carsVM.Price, Mode=TwoWay}"
                                        Power="{Binding carsVM.Power, Mode=TwoWay}"
                                        Mileage="{Binding carsVM.Mileage, Mode=TwoWay}"
                                        CarYear="{Binding carsVM.Age, Mode=TwoWay}"
                                        AvailableBrands="{Binding carsVM.Brands}"
                                        AvailableDamages="{Binding carsVM.Damages}"
                                        AvailableFuels="{Binding carsVM.Fuels}"
                                        AvailableGears="{Binding carsVM.Gears}"
                                        AvailableModels="{Binding carsVM.Models, Mode=TwoWay}"
                                        AvailableTypes="{Binding carsVM.Types}"
                                        Brand="{Binding carsVM.Selected_Brand, Mode=TwoWay}"
                                        Model="{Binding carsVM.Selected_Model, Mode=TwoWay}"
                                        Type="{Binding carsVM.Selected_Type, Mode=TwoWay}"
                                        Gear="{Binding carsVM.Selected_Gear, Mode=TwoWay}"
                                        Fuel="{Binding carsVM.Selected_Fuel, Mode=TwoWay}"
                                        Damage="{Binding carsVM.Selected_Damage, Mode=TwoWay}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
